<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base para modo oscuro -->
    <style name="Theme.GrupoMessERP" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">#3E5C8A</item> <!-- Azul mÃ¡s claro para destacar -->
        <item name="colorPrimaryVariant">#2C4A7A</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">#4DB6AC</item> <!-- Verde agua elegante -->
        <item name="colorSecondaryVariant">#00897B</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
    </style>

    <!-- Variantes -->
    <style name="Theme.GrupoMessERP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GrupoMessERP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GrupoMessERP.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
    <style name="Theme.GrupoMessERP.ToolbarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>
</resources>
