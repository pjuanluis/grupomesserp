<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base para modo oscuro -->
    <style name="Theme.GrupoMessERP" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">#3E5C8A</item> <!-- Azul mÃ¡s claro para destacar -->
        <item name="colorPrimaryVariant">#2C4A7A</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">#4DB6AC</item> <!-- Verde agua elegante -->
        <item name="colorSecondaryVariant">#00897B</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <!-- Estilos de componentes -->
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    </style>
    <!-- Estilos de componentes personalizados -->
    <style name="Widget.App.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/custom_popup_background</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="subtitleTextColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="colorOnSurface">?attr/colorOnPrimary</item>
        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>
    </style>
</resources>
